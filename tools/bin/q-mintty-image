#! /bin/sh

q_mintty_set_bgimg()
{
	if [ "$#" -eq 0 ] ; then
		echo "require image file name !"
		return
	fi
	FILE="$1"
	if [ "$FILE" = "/dev/null" ] ; then
		printf "\e]11;\e\\"
	elif [ -f "$FILE" ] ; then
		BRIGHT="${2:-100}"
		printf "\e]11;%s\e\\" "_${FILE},${BRIGHT}"
	else
		echo "'$FILE' is not a valid file !"
	fi
}

if [ "$#" -eq 0 ] ; then
	echo "usage: q-mintty-image <image> [brightness]"
	exit 0
fi

q_mintty_set_bgimg "$@"

